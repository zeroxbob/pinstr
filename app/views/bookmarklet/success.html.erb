<div class="bg-white rounded-lg shadow-sm p-8 text-center" data-controller="bookmarklet-success">
  <h1 class="text-3xl font-bold text-green-600 mb-4">Bookmark Saved!</h1>
  <p class="text-gray-700 mb-6">Your bookmark has been successfully saved to Pinstr.</p>
  
  <% if params[:nostr_signed] == 'true' %>
    <div class="bg-green-50 border-l-4 border-green-500 text-green-800 p-3 rounded mx-auto my-4 max-w-md text-left text-sm">
      <span class="text-lg">✓</span> Bookmark was signed with Nostr and will be published to relays.
    </div>
  <% elsif params[:nostr_signed] == 'false' %>
    <div class="bg-yellow-50 border-l-4 border-yellow-500 text-yellow-800 p-3 rounded mx-auto my-4 max-w-md text-left text-sm">
      <span class="text-lg">ℹ️</span> Bookmark was saved without Nostr signing.
    </div>
  <% end %>
  
  <div class="flex justify-center gap-4 mt-6">
    <button type="button" class="bg-indigo-600 text-white px-6 py-2 rounded hover:bg-indigo-700 transition-colors" data-action="click->bookmarklet-success#closeWindow">Close</button>
    <a href="<%= bookmarks_path %>" class="bg-gray-200 text-gray-800 px-6 py-2 rounded hover:bg-gray-300 transition-colors" target="_blank">View All Bookmarks</a>
  </div>
  
  <% if params[:nostr_signed] == 'false' %>
    <div class="mt-6">
      <p class="text-sm text-gray-600">
        Want to use Nostr for your bookmarks? 
        <a href="<%= debug_bookmarklet_path %>" target="_blank" class="text-indigo-600 hover:text-indigo-800 hover:underline">Set up Nostr integration</a>
      </p>
    </div>
  <% end %>
</div>

<!-- All styles now use Tailwind CSS classes -->
